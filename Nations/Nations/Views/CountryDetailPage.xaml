                    <Frame Grid.Row="0" HasShadow="True" Margin="20, 0, 20, 0" Padding="0" HeightRequest="130" VerticalOptions="StartAndExpand" >
                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Name" TextColor="#7D7D7D" FontSize="12" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Name}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="1" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Capital" TextColor="#7D7D7D" FontSize="12" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Capital}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="2" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Alpha2Code" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Alpha2Code}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="3" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="NumericCode" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.NumericCode}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True" Margin="20, 0, 20, 0" Padding="0" HeightRequest="130" VerticalOptions="StartAndExpand">
                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Region" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Region}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="1" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Subregion" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Subregion}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="2" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Population" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Population}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="3" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Area" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Area}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True" Margin="20, 110, 20, 0" Padding="0" HeightRequest="130" VerticalOptions="StartAndExpand">
                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Cioc" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Cioc}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="1" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Native Name" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.NativeName}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="2" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Alpha3Code" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Alpha3Code}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="3" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Domain" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.TopLevelDomain[0]}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True"  Margin="20, 250, 20, 0" Padding="0" HeightRequest="130" VerticalOptions="StartAndExpand" WidthRequest="500">
                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Latitude" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Latlng[0], StringFormat='{0:N2}'}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="1" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Longitude" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Latlng[1], StringFormat='{0:N2}'}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="2" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Demonym" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Demonym}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Column="3" Orientation="Vertical" Spacing="10" HorizontalOptions="CenterAndExpand">
                                <StackLayout Spacing="7" HorizontalOptions="CenterAndExpand">
                                    <Label Text="Gini" TextColor="#7D7D7D" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                    <Label Text="{Binding Country.Gini, StringFormat='{0:N2}'}" TextColor="Black" FontSize="14" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                        </Grid>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True" Margin="20, 390, 20, 0" Padding="8" HeightRequest="65" VerticalOptions="StartAndExpand">
                        <ScrollView>
                            <StackLayout>
                                <Label Text="Alternative Spellings"
                                       TextColor="Black"
                                   FontSize="Medium"
                                   FontAttributes="Bold" />
                                <BoxView Color="Gray"
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                                <ListView 
                              IsEnabled="False"
                              RowHeight="23"
                              HorizontalOptions="Center"
                              ItemsSource="{Binding Country.AltSpellings}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Label Text="{Binding}" />
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </ScrollView>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True"  Margin="20, 480, 20, 0" Padding="8" HeightRequest="130" VerticalOptions="StartAndExpand">
                        <ScrollView>
                            <StackLayout>
                                <Label Text="Timezones"
                                        TextColor="Black"
                                   FontSize="Medium"
                                   FontAttributes="Bold" />
                                <BoxView Color="Gray"
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                                <ListView 
                              IsEnabled="False"
                              RowHeight="23"
                              HorizontalOptions="Center"
                              ItemsSource="{Binding Country.Timezones}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Label Text="{Binding}" />
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </ScrollView>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True" Margin="20, 635, 20, 0" Padding="8" HeightRequest="65" VerticalOptions="StartAndExpand">
                        <ScrollView>
                            <StackLayout>
                                <Label Text="Top Level Domain"
                                        TextColor="Black"
                                   FontSize="Medium"
                                   FontAttributes="Bold" />
                                <BoxView Color="Gray"
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                                <ListView 
                              IsEnabled="False"
                              RowHeight="23"
                              HorizontalOptions="Center"
                              ItemsSource="{Binding Country.TopLevelDomain}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Label Text="{Binding}" />
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </ScrollView>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True" Margin="20, 725, 20, 0" Padding="8" HeightRequest="65" VerticalOptions="StartAndExpand">
                        <ScrollView>
                            <StackLayout>
                                <Label Text="Calling Codes"
                                        TextColor="Black"
                                   FontSize="Medium"
                                   FontAttributes="Bold" />
                                <BoxView Color="Gray"
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                                <ListView 
                              IsEnabled="False"
                              RowHeight="23"
                              HorizontalOptions="Center"
                              ItemsSource="{Binding Country.CallingCodes}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Label Text="{Binding}" />
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </ScrollView>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True" Margin="20, 815, 20, 0" Padding="8" HeightRequest="130" VerticalOptions="StartAndExpand">
                        <ScrollView>
                            <StackLayout>
                                <Label Text="Borders"
                                        TextColor="Black"
                                   FontSize="Medium"
                                   FontAttributes="Bold" />
                                <BoxView Color="Gray"
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                                <ListView 
                              IsEnabled="False"
                              RowHeight="23"
                              HorizontalOptions="Center"
                              ItemsSource="{Binding Country.Borders}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Label Text="{Binding}" />
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </ScrollView>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True" Margin="20, 970, 20, 0" Padding="8" HeightRequest="120" VerticalOptions="StartAndExpand">
                        <ScrollView>
                            <StackLayout>
                                <Label Text="Currencies"
                                        TextColor="Black"
                                   FontSize="Medium"
                                   FontAttributes="Bold" />
                                <BoxView Color="Gray"
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                                <ListView
                              Grid.Column="1"
                              IsEnabled="False"
                              RowHeight="80"
                              ItemsSource="{Binding Country.Currencies}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Label TextColor="Black" Grid.Row="0" Grid.Column="0">Code:</Label>
                                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Code}" />
                                                    <Label TextColor="Black" Grid.Row="1" Grid.Column="0">Name:</Label>
                                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Name}" />
                                                    <Label TextColor="Black" Grid.Row="2" Grid.Column="0">Symbol:</Label>
                                                    <Label Grid.Row="2" Grid.Column="1" HorizontalOptions="Start" Text="{Binding Symbol}" />
                                                </Grid>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </ScrollView>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True" Margin="20, 1115, 20, 0" Padding="8" HeightRequest="140" VerticalOptions="StartAndExpand">
                        <ScrollView>
                            <StackLayout>
                                <Label Text="Languages"
                                        TextColor="Black"
                                   FontSize="Medium"
                                   FontAttributes="Bold" />
                                <BoxView Color="Gray"
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                                <ListView
                              Grid.Column="1"
                              IsEnabled="False"
                              RowHeight="105"
                              ItemsSource="{Binding Country.Languages}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Label TextColor="Black" Grid.Row="0" Grid.Column="0">Name:</Label>
                                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Name}" />
                                                    <Label TextColor="Black" Grid.Row="1" Grid.Column="0">Native name:</Label>
                                                    <Label Grid.Row="1" Grid.Column="1" HorizontalOptions="Start" Text="{Binding NativeName}" />
                                                    <Label TextColor="Black" Grid.Row="2" Grid.Column="0">Iso639 1:</Label>
                                                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding Iso639_1}" />
                                                    <Label TextColor="Black" Grid.Row="3" Grid.Column="0">Iso639 2:</Label>
                                                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding Iso639_2}" />
                                                </Grid>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </ScrollView>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True" Margin="20, 1280, 20, 0" Padding="8" HeightRequest="180" VerticalOptions="StartAndExpand">
                        <ScrollView>
                            <StackLayout>
                                <Label Text="Translations"
                                        TextColor="Black"
                                   FontSize="Medium"
                                   FontAttributes="Bold" />
                                <BoxView Color="Gray"
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Label TextColor="Black" Grid.Row="0" Grid.Column="0">German:</Label>
                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Country.Translations.De}" />
                                    <Label TextColor="Black" Grid.Row="1" Grid.Column="0">Spanish:</Label>
                                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Country.Translations.Es}" />
                                    <Label TextColor="Black" Grid.Row="2" Grid.Column="0">French:</Label>
                                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding Country.Translations.Fr}" />
                                    <Label TextColor="Black" Grid.Row="3" Grid.Column="0">Japanese:</Label>
                                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding Country.Translations.Ja}" />
                                    <Label TextColor="Black" Grid.Row="4" Grid.Column="0">Italian:</Label>
                                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding Country.Translations.It}" />
                                    <Label TextColor="Black" Grid.Row="5" Grid.Column="0">Brazillian-portuguese:</Label>
                                    <Label Grid.Row="5" Grid.Column="1" Text="{Binding Country.Translations.Br}" />
                                    <Label TextColor="Black" Grid.Row="6" Grid.Column="0">Portuguese:</Label>
                                    <Label Grid.Row="6" Grid.Column="1" Text="{Binding Country.Translations.Pt}" />
                                    <Label TextColor="Black" Grid.Row="7" Grid.Column="0">Dutch:</Label>
                                    <Label Grid.Row="7" Grid.Column="1" Text="{Binding Country.Translations.Nl}" />
                                    <Label TextColor="Black" Grid.Row="8" Grid.Column="0">Croatian:</Label>
                                    <Label Grid.Row="8" Grid.Column="1" Text="{Binding Country.Translations.Hr}" />
                                    <Label TextColor="Black" Grid.Row="9" Grid.Column="0">Persian:</Label>
                                    <Label Grid.Row="9" Grid.Column="1" HorizontalOptions="Start" Text="{Binding Country.Translations.Fa}" />
                                </Grid>
                            </StackLayout>
                        </ScrollView>
                    </Frame>

                    <Frame Grid.Row="1" HasShadow="True" Margin="20, 1485, 20, 0" Padding="8" HeightRequest="140" VerticalOptions="StartAndExpand">
                        <ScrollView>
                            <StackLayout>
                                <Label Text="Regional Blocs"
                                        TextColor="Black"
                                   FontSize="Medium"
                                   FontAttributes="Bold" />
                                <BoxView Color="Gray"
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                                <ListView
                              Grid.Column="1"
                              IsEnabled="False"
                              RowHeight="125"
                              ItemsSource="{Binding Country.RegionalBlocs}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Label TextColor="Black" Grid.Row="0" Grid.Column="0">Name:</Label>
                                                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Name}" />
                                                    <Label TextColor="Black" Grid.Row="1" Grid.Column="0">Native name:</Label>
                                                    <Label Grid.Row="1" Grid.Column="1" HorizontalOptions="Start" Text="{Binding Acronym}" />
                                                    <Label TextColor="Black" Grid.Row="2" Grid.Column="0">Other names:</Label>
                                                    <ListView   Grid.Row="2"
                                                    Grid.Column="1"
                                                    IsEnabled="False"
                                                    RowHeight="23"
                                                    ItemsSource="{Binding OtherNames}">
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate>
                                                                <ViewCell>
                                                                    <Label Text="{Binding}" />
                                                                </ViewCell>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </ListView>
                                                    <Label  TextColor="Black" Grid.Row="3" Grid.Column="0">Other acronyms:</Label>
                                                    <ListView   Grid.Row="3"
                                                    Grid.Column="1"
                                                    IsEnabled="False"
                                                    RowHeight="23"
                                                    ItemsSource="{Binding OtherAcronyms}">
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate>
                                                                <ViewCell>
                                                                    <Label Text="{Binding}" />
                                                                </ViewCell>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </ListView>
                                                </Grid>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>
                        </ScrollView>
                    </Frame>
